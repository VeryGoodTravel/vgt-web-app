{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "TravelOffer.schema.json",
  "title": "TravelOffer",
  "description": "Describes single tour offer including its availability.",
  "type": "object",
  "properties": {
    "origin": {
      "$ref": "TravelLocation.schema.json"
    },
    "destination": {
      "$ref": "TravelLocation.schema.json"
    },
    "date": {
      "$ref": "TravelDateRange.schema.json"
    },
    "price": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number",
          "minimum": 0.0
        },
        "currency": {
          "type": "string"
        }
      },
      "required": [
        "value",
        "currency"
      ]
    },
    "availability": {
      "$comment": "If not provided, defaults to false",
      "type": "boolean"
    },
    "rating": {
      "$comment": "If not provided, defaults to 0.0",
      "type": "number",
      "minimum": 0.0,
      "maximum": 5.0
    },
    "image": {
      "$ref": "TravelImage.schema.json"
    }
  },
  "required": [
    "origin",
    "destination",
    "date",
    "price"
  ]
}
