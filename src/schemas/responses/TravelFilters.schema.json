{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "TravelFilters.schema.json",
  "title": "TravelFilters",
  "description": "Travel filters describing available options to be displayed in search bar.",
  "type": "object",
  "properties": {
    "origins": {
      "description": "Available places of departure.",
      "type": "array",
      "items": {
        "$ref": "TravelLocation.schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "destinations": {
      "description": "Available tour destinations",
      "type": "array",
      "items": {
        "$ref": "TravelLocation.schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "dates": {
      "description": "Date range of available tours.",
      "$ref": "TravelDateRange.schema.json"
    },
    "participants": {
      "description": "Participants types based on their age.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "min": {
            "type": "integer",
            "minimum": 0
          },
          "max": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "id",
          "label",
          "min",
          "max"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "origins",
    "destinations",
    "dates",
    "participants"
  ]
}
