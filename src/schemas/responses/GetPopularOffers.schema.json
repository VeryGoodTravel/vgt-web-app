{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "/schemas/common/GetPopularOffers.schema.json",
  "title": "GetPopularOffers",
  "description": "Contains all statistics regarding popular travel destinations.",
  "type": "object",
  "properties": {
    "directions": {
      "description": "",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "origin": {
            "$ref": "/schemas/common/TravelLocation.schema.json"
          },
          "destination": {
            "$ref": "/schemas/common/TravelLocation.schema.json"
          }
        },
        "required": [
          "origin",
          "destination"
        ]
      },
      "minItems": 0,
      "maxItems": 12
    },
    "accommodations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "destination": {
            "$ref": "/schemas/common/TravelLocation.schema.json"
          },
          "name": {
            "type": "string"
          },
          "room": {
            "type": "string"
          },
          "transportation": {
            "type": "string"
          },
          "maintenance": {
            "type": "string"
          },
          "rating": {
            "description": "If not provided, defaults to 0.0",
            "type": "number",
            "minimum": 0.0,
            "maximum": 5.0
          }
        },
        "required": [
          "destination",
          "name",
          "room",
          "transportation",
          "maintenance",
          "rating"
        ]
      },
      "minItems": 0,
      "maxItems": 12
    }
  },
  "required": [
    "directions",
    "accommodations"
  ]
}
