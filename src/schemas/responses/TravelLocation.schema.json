{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "TravelLocation.schema.json",
  "title": "TravelLocation",
  "description": "Describes travel location, both origins and destinations.",
  "allOf": [
    {
      "$ref": "#/$defs/location"
    },
    {
      "type": "object",
      "properties": {
        "locations": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/location"
          }
        }
      }
    }
  ],
  "$defs": {
    "location": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "label"
      ]
    }
  }
}
